{
  "name": "@ianwremmel/debug",
  "version": "0.0.0-development",
  "description": "Simplified naming for 'debug'",
  "bin": {},
  "main": "./dist/cjs/index.js",
  "module": "./dist/esm/index.js",
  "types": "./types.d.ts",
  "repository": {
    "type": "git",
    "url": "git://github.com/ianwremmel/debug.git"
  },
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "npm-run-all build:*",
    "build:cjs": "BUILD_TARGET=cjs npm run compile",
    "build:esm": "BUILD_TARGET=esm npm run compile",
    "build:readme": "markdown-toc -i --bullets='-' --maxdepth=3  README.md  && prettier --write README.md",
    "compile": "babel -d dist/${BUILD_TARGET} src",
    "eslint": "eslint --ignore-path .gitignore --ignore-pattern dist",
    "lint": "npm-run-all lint:*",
    "lint:changelog": "commitlint --from origin/master --to HEAD",
    "lint:js": "npm run --silent eslint -- .",
    "lint:types": "tsc",
    "semantic-release": "semantic-release",
    "test": "echo 'this package does not have tests'"
  },
  "engines": {
    "node": ">=10"
  },
  "keywords": [],
  "author": "Ian Remmel <1182361+ianwremmel@users.noreply.github.com>",
  "license": "MIT",
  "dependencies": {
    "chalk": "^2.4.1",
    "debug": "^4.1.0",
    "invariant": "^2.2.4",
    "pkg-up": "^2.0.0",
    "supports-color": "^5.5.0"
  },
  "devDependencies": {
    "@babel/cli": "^7.1.2",
    "@babel/core": "^7.1.2",
    "@babel/preset-env": "^7.1.0",
    "@commitlint/cli": "^7.2.1",
    "@commitlint/config-conventional": "^7.1.2",
    "@ianwremmel/eslint-plugin-ianwremmel": "^3.1.1",
    "@types/debug": "0.0.31",
    "@types/invariant": "^2.2.29",
    "@types/node": "^10.12.0",
    "@types/supports-color": "^5.3.0",
    "condition-circle": "^2.0.1",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.10.1",
    "eslint-plugin-comments": "^1.0.0",
    "eslint-plugin-compat": "^3.5.1",
    "eslint-plugin-eslint-comments": "^3.1.2",
    "eslint-plugin-import": "^2.20.2",
    "eslint-plugin-markdown": "^1.0.2",
    "eslint-plugin-mocha": "^6.3.0",
    "eslint-plugin-prettier": "^3.1.3",
    "husky": "^1.1.2",
    "lint-staged": "^7.3.0",
    "markdown-toc": "^1.2.0",
    "npm-run-all": "^4.1.3",
    "prettier": "^2.0.4",
    "rimraf": "^2.6.2",
    "semantic-release": "^15.10.6",
    "typescript": "^3.1.3"
  },
  "lint-staged": {
    "*.js": "npm run eslint -- ",
    "bin/**": "npm run eslint -- "
  },
  "release": {
    "verifyConditions": "condition-circle"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -e",
      "pre-commit": "lint-staged"
    }
  },
  "publishConfig": {
    "access": "public"
  }
}
